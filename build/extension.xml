<?xml version="1.0" encoding="UTF-8"?>
<extension xmlns="http://ns.adobe.com/air/extension/4.0">
  <id>com.github.airext.DeviceInfo</id>
  <versionNumber>1.2</versionNumber>
  <platforms>
    <platform name="iPhone-ARM">
      <applicationDeployment>
        <nativeLibrary>libDeviceInfo.a</nativeLibrary>
        <initializer>ANXDeviceInfoInitializer</initializer>
        <finalizer>ANXDeviceInfoFinalizer</finalizer>
      </applicationDeployment>
    </platform>
    <platform name="iPhone-x86">
      <applicationDeployment>
        <nativeLibrary>libDeviceInfoSimulator.a</nativeLibrary>
        <initializer>ANXDeviceInfoInitializer</initializer>
        <finalizer>ANXDeviceInfoFinalizer</finalizer>
      </applicationDeployment>
    </platform>
    <platform name="Android-ARM">
      <applicationDeployment>
        <nativeLibrary>libDeviceInfo.jar</nativeLibrary>
        <initializer>com.github.airext.DeviceInfo</initializer>
        <finalizer>com.github.airext.DeviceInfo</finalizer>
      </applicationDeployment>
    </platform>
    <platform name="default">
      <applicationDeployment />
    </platform>
  </platforms>
</extension>